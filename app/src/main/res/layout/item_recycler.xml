<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.activity.demo_list.MainActivity">
        <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/image"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/tv_description"
                    android:text="hi hello how do you fsdjhfsjkfdf dsfkjsdfhdsjfhsjkfhdsf dsfkjdhfjkdshfjdskhfdsjkhfdsjkfsd fsdkjfhdsjkfhdsjkfhdsjkfhdsf dsfkjdsfhdsjkfhsdkjfhdsjkfhdsf dskjfdhsjkfhdsjfkhdskfhsf dsjk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="3"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>